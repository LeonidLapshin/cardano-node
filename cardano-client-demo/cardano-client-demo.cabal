cabal-version:       2.4
name:                cardano-client-demo
version:             0.1.0.0
synopsis:            A simple demo cardano-node client application
description:         This is intended to demonstrate how to write simple
                     applications that interact with the cardano-node,
                     using the cardano-api.
license:             Apache-2.0
license-file:        LICENSE
author:              IOHK
maintainer:          operations@iohk.io
license-files:
  LICENSE
  NOTICE
extra-source-files:  CHANGELOG.md

executable cardano-client-demo
  main-is:             Main.hs
  other-modules:
  build-depends:       base,
                       filepath,
                       time,

                       cardano-api,
                       ouroboros-network,

  default-language:    Haskell2010

executable cardano-client-demo-pipeline
  main-is:             MainPipeline.hs
  other-modules:
  build-depends:       base,
                       filepath,
                       time,

                       cardano-api,
                       cardano-ledger,
                       ouroboros-network,
                       typed-protocols,

  default-language:    Haskell2010

executable cardano-client-demo-ledger-state
  main-is:             MainLedgerState.hs
  other-modules:       NewApiStuff
  build-depends:       base,
                       containers,
                       filepath,
                       mtl,
                       time,

                       cardano-api,
                       cardano-binary,
                       cardano-crypto-wrapper,
                       cardano-ledger,
                       ouroboros-network,
                       ouroboros-consensus,
                       ouroboros-consensus-byron,
                       ouroboros-consensus-shelley,
                       typed-protocols,

  default-language:    Haskell2010
  ghc-options:
    -Wall
